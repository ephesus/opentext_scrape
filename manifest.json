{
  "manifest_version": 2,
  "name": "OpenText Information Viewer",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [ "http://opentextweb.shigapatent.com/*AL*", "https://opentextweb.shigapatent.com/*AL*", "https://www.deepl.com/*", "http://translate.google.com/*", "https://translate.google.com/*" ],
      "js": [ "lib/jquery-3.3.1.min.js", "scrape.js" ]
    }
  ],
  "browser_action": {
    "default_icon": {                    
      "24": "img/icon.png"
    },
    "default_title": "Shiga OpenText InfoBox"
  }
}
