{
  "manifest_version": 2,
  "name": "OpenText Information Viewer",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [ "http://opentext/*", "https://opentext/*" ],
      "js": [ "lib/jquery-3.3.1.min.js", "scrape.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icon.png"
  }
}
